#include <stdio.h>
#include <assert.h>
#include <stdlib.h>
#include <sys/time.h>
#define TAM 10

int main (void){
	
	/* inicializaci√≥n de variables: */
	FILE * result=NULL;
	int i=0, j=0;
	char * bloque=NULL;
	size_t size=0;
	int close=0;
	int err=0, err_time1=0, err_time2=0, err_timesubtract=0;
	timeval * start=NULL;
	timeval * end=NULL;
	timeval * result=NULL;

	/*armamos la tabla: */
	printf ("performance en kb/s:\n");
	printf ("--------------------\n");
	printf ("fopen(), fwrite(), fclose()\n");
	
	/* escritura: */
	for (j=0; j<=16; j++){
		i= 1<<j;
		bloque= (char *) calloc (i,sizeof (char));
		assert (bloque!=NULL);

		/* abrir /dev/fifo para escritura */
		err_time1= gettimeofday (start, NULL);
		result=fopen ("/dev/fifo","r+");
		assert (result !=NULL);
		size=fwrite ( (void *) bloque, i, 1, result);
		if (size != i){
			printf ("error \n");
			return 1;
		}

		/* cerrar archivo: */
		close=fclose (result);
		err_time2= gettimeofday (end, NULL);
		if (close != 0){
			perror((char*)strerror(close));
			return 1;
		}
		else {
			if (err_time1 == 0 && err_time2 == 0){
				err_subtract= timeval_subtract (result, end, start);
				if (err_subtract == 0)
					printf ("%f\n", &result);
				else{
					printf ("error en timeval_subtract o gettimeofday\n");
					return 1;
				}
				result=NULL;
			}
		}
	}


	return 0;
}
